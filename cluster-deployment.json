{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterResourceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Managed Cluster resource."
            }
        },
        "extensionResourceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the extension."
            }
        },
        "app-eula": {
            "type": "string",
            "metadata": {
                "description": "End User License Agreement"
            }
        },
        "app-difficulty": {
            "type": "string",
            "metadata": {
                "description": "Minecraft difficulty"
            }
        },
        "app-motd": {
            "type": "string",
            "metadata": {
                "description": "Message Of The Day"
            }
        }
    },
    "variables": {
        "plan-name": "plan-name",
        "plan-publisher": "publisherid",
        "plan-offerID": "offerid",
        "releaseTrain": "Stable"
    },
    "resources": [
        {
            "type": "Microsoft.KubernetesConfiguration/extensions",
            "apiVersion": "2022-03-01",
            "name": "extensionsusage",
            "dependsOn": [
            ],
            "properties": {
                "extensionType": "Microsoft.ExtensionsUsage",
                "releaseTrain": "Stable"
            },
            "scope": "[concat('Microsoft.ContainerService/managedClusters/', parameters('clusterResourceName'))]"
        },
        {
            "type": "Microsoft.KubernetesConfiguration/extensions",
            "apiVersion": "2022-04-02-preview",
            "name": "[parameters('extensionResourceName')]",
            "dependsOn": [
                "extensionsusage"
            ],
            "properties": {
                "extensionType": "[concat(variables('plan-publisher'), '.' , variables('plan-offerID'), '-', variables('plan-name'))]",
                "autoUpgradeMinorVersion": true,
                "releaseTrain": "[variables('releaseTrain')]",
                "configurationSettings": {
                    "minecraftServer.eula": "[parameters('app-eula')]",
                    "minecraftServer.difficulty": "[parameters('app-difficulty')]",
                    "minecraftServer.motd": "[parameters('app-motd')]"
                },
                "configurationProtectedSettings": {}
            },
            "plan": {
                "name": "[variables('plan-name')]",
                "publisher": "[variables('plan-publisher')]",
                "product": "[variables('plan-offerID')]"
            },
            "scope": "[concat('Microsoft.ContainerService/managedClusters/', parameters('clusterResourceName'))]"
        }
    ],
    "outputs": {}
}